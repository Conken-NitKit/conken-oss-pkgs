{
  "name": "typescript-everything",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "fix:all": "run-s lint:fix format:fix check-types",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx './packages' --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "format": "run-s format:packages format:apps",
    "format:packages": "prettier --check \"./packages/**/*.{js,jsx,ts,tsx}\"",
    "format:apps": "prettier --check \"./apps/**/*.{js,jsx,ts,tsx}\"",
    "format:fix": "run-s format:fix:packages format:fix:apps",
    "format:fix:packages": "prettier --write \"./packages/**/*.{js,jsx,ts,tsx}\"",
    "format:fix:apps": "prettier --write \"./apps/**/*.{js,jsx,ts,tsx}\"",
    "check-types": "turbo run type-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "turbo": "^1.5.5",
    "typescript": "^4.7.4"
  },
  "author": "kubo-hide-kun",
  "license": "ISC"
}
