{
  "name": "typescript-everything",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook",
    "fix:all": "run-s lint:fix format:fix typecheck",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitlint-plugin-scope-empty-exceptions": "^1.1.0",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "turbo": "^1.5.6",
    "typescript": "^4.7.4"
  },
  "optionalDependencies": {
    "turbo-linux-64": "1.5.6"
  },
  "author": "kubo-hide-kun",
  "license": "ISC"
}
